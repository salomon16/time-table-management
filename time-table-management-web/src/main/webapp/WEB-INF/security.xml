<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<!-- <http auto-config="true"> <intercept-url pattern="/protected.jsf" access="ROLE_ADMIN" 
		/> Custom login page <form-login login-page='/login.jsf' /> <access-denied-handler 
		error-page='/403page.jsf' /> Custom logout page <logout /> </http> -->

	<http use-expressions="true">
		<intercept-url pattern="/timemanager/**" access="isAuthenticated()" /> 
		<intercept-url pattern="/timemanager/**" access="hasRole('ROLE_ADMIN')" />
		<intercept-url pattern="/**" access="permitAll()" />
		
		<!-- Custom login page -->
		<form-login login-page="/login.xhtml" />
		
		<!-- Custom logout page -->
	 	<logout logout-success-url="/login.xhtml" />
	</http>



